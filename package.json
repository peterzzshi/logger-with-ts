{
  "name": "logger-with-ts",
  "version": "1.0.0",
  "type": "module",
  "description": "Transaction-aware logger with contextual logging built with TypeScript",
  "main": "dist/logger.js",
  "types": "dist/logger.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "tsx src/demo.ts",
    "demo": "tsx src/demo.ts",
    "test": "tsx --test **/*.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "logger",
    "typescript",
    "context",
    "async-local-storage"
  ],
  "author": "Peter Shi",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/plugin-kit": "^0.3.3",
    "@types/node": "^22.0.0",
    "eslint": "^9.31.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    }
  }
}
